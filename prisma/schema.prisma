generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  name     String
  email    String @unique
  password String

  birthDate  DateTime?
  cellNumber String?   @unique
  admin      Boolean   @default(false)
  avatar     String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  Tokens     Tokens?
  BookRented RentUserLibraryBook[]

  @@map("user")
}

model Tokens {
  id String @id @default(uuid())

  token      String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  User   User   @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  userId String @unique

  @@map("tokens")
}

model LibraryBook {
  id String @id @default(uuid())

  Library   Library? @relation(fields: [libraryId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  libraryId String
  Book      Book?    @relation(fields: [bookId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  bookId    String

  rented Boolean               @default(false)
  Rented RentUserLibraryBook[]

  @@map("library_book")
}

model Library {
  id String @id @default(uuid())

  name String @unique

  Books LibraryBook[]

  @@map("library")
}

model Book {
  id String @id @default(uuid())

  name      String  @unique
  hourValue Float
  bookImage String?

  Library  LibraryBook[]
  Discount Discount[]

  @@map("book")
}

model RentUserLibraryBook {
  id String @id @default(uuid())

  rented_at DateTime @default(now())

  User           User?        @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  userId         String
  LibraryBook    LibraryBook? @relation(fields: [library_bookId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  Discount       Discount?    @relation(fields: [percentage], references: [percentage], onUpdate: Cascade, onDelete: Cascade)
  percentage     Int?
  library_bookId String
  historyId      String

  @@map("rent_user_library_book")
}

model HistoryRent {
  id String @id @default(uuid())

  libraryid  String
  bookId     String
  clienteId  String
  startDate  DateTime
  endDate    DateTime?
  totalValue Float?

  @@map("history_rent")
}

model Discount {
  id String @id @default(uuid())

  percentage Int? @unique

  Book   Book   @relation(fields: [bookId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  bookId String

  newValue Int?

  startDate           DateTime?
  endDate             DateTime?
  RentUserLibraryBook RentUserLibraryBook[]

  @@map("discount")
}
